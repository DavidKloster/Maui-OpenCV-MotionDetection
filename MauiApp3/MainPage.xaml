<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="MauiApp3.MainPage">

    <Grid ColumnDefinitions="50*,50*" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <cv:CameraView Grid.Column="0" x:Name="cameraView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" IsVisible="true"/>
        <skia:SKCanvasView Grid.Column="1" x:Name="canvasView" PaintSurface="canvasView_PaintSurface" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
    </Grid>

</ContentPage>
